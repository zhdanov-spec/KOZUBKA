<body>
    <!-- Preloader-->
    <div class="preloader" id="preloader">
        <div class="spinner-grow text-secondary" role="status">
            <div class="sr-only">Зачекайте...</div>
        </div>
    </div>
    <!-- Header Area-->
    <div class="header-area" id="headerArea">
        <div class="container h-100 d-flex align-items-center justify-content-between">
            <!-- Logo Wrapper-->
            <div class="logo-wrapper">
                <a asp-controller="Home" asp-action="Index"><img src="~/assets/img/core-img/logo-small-rro.png" alt=""></a>
            </div>
            <!-- Search Form-->
            @*<div class="top-search-form">
                <form action="" method="">
                    <input class="form-control" type="search" placeholder="Enter your keyword">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>*@
            <!-- Navbar Toggler-->
            <div class="suha-navbar-toggler" data-bs-toggle="offcanvas" data-bs-target="#suhaOffcanvas" aria-controls="suhaOffcanvas"><span></span><span></span><span></span></div>
        </div>
    </div>
    <div class="offcanvas offcanvas-start suha-offcanvas-wrap" tabindex="-1" id="suhaOffcanvas" aria-labelledby="suhaOffcanvasLabel">
        <!-- Close button-->
        <button class="btn-close btn-close-white text-reset" type="button" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        <!-- Offcanvas body-->
        <div class="offcanvas-body">
            @if(User.Identity.IsAuthenticated)
            {
                <!-- Sidenav Profile-->
                <div class="sidenav-profile">
                    <div class="user-profile">
                        @if(!string.IsNullOrEmpty(currentUser?.UserImage_200_200))
                        {
                            <img src="@string.Format("{0}{1}",filesite,currentUser?.UserImage_200_200)" alt="">
                        }
                        else
                        {
                            <img src="@string.Format("{0}/assets/images/user/no-avatar.png",filesite)" alt="">
                        }
                        
                    </div>
                    <div class="user-info">
                        <h6 class="user-name mb-1">@currentUser?.UName</h6>
                        @{
                            var onlineModel = await _rroSettingRepository.CheckStatusRRO(currentUser);
                            var smenaInfo = await _rroSmenaRepository.GetRROSmenaInfo(currentUser);
                            if(onlineModel.IsOnline)
                            {
                                <div class="live-chat-intro p-0" style="background:none;border-radius:unset">
                                    <div class="status online">Касса онлайн</div>
                                </div>
                            }
                            else
                            {
                                <div class="live-chat-intro p-0" style="background:none;border-radius:unset">
                                    <div class="status offline">Касса офлайн(@string.Format("{0}",onlineModel.StatusCode))</div>
                                    <p class="available-balance">@onlineModel.Message</p>
                                </div>
                                
                            }
                            <p class="available-balance">Баланс за зміну</p> 
                            <p class="available-balance">Готівка-<span>@smenaInfo.CashSumRRO</span></p>
                            <p class="available-balance">Картка-<span>@smenaInfo.CashLessSumRRO</span></p>
                        }
                        
                    </div>
                </div>
                <!-- Sidenav Nav-->
                <ul class="sidenav-nav ps-0">
                    <li><a asp-controller="Shop" asp-action="Index"><i class="lni lni-cart"></i>Мій магазин</a></li>
                    <li><a asp-controller="Reports" asp-action="Index"><i class="lni lni-empty-file"></i>Мої продажі</a></li>
                    <li><a asp-controller="Smena" asp-action="Index"><i class="lni lni-investment"></i>Зміна</a></li>
                    <li class="suha-dropdown-menu">
                        <a href="#"><i class="lni lni-code"></i>Номенклатура</a>
                        <ul>
                            <li><a asp-controller="Settings" asp-action="GoodsGroupList">- Групи товарів</a></li>
                            <li><a asp-controller="Settings" asp-action="GoodsItemList">- Товари</a></li>
                        </ul>
                    </li>
                    <li><a asp-controller="Settings" asp-action="ServicesList"><i class="lni lni-cog"></i>Сервіси ПРРО</a></li>
                    <li><a href="@logoutPage"><i class="lni lni-power-switch"></i>Вихід</a></li>
                </ul>
            }            
            else
            {
                <div class="sidenav-profile">
                    <div class="user-profile">
                         <img src="@string.Format("{0}/assets/images/user/no-avatar.png",filesite)" alt="">
                    </div>
                    <div class="user-info">
                        <h6 class="user-name mb-1">Гість</h6>
                        
                    </div>
                </div>
                <ul class="sidenav-nav ps-0">
                    <li><a asp-controller="Shop" asp-action="Index"><i class="lni lni-cart"></i>Мій магазин</a></li>
                </ul>
            }
