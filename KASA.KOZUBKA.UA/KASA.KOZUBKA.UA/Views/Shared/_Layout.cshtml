@inject ua.kozubka.context.Services.Repositories.ModelRepository.ISettingRepository _settingRepository
@inject ua.kozubka.context.Services.Repositories.GeneralRepository.IDesignerRepository _designerRepository
@inject ua.kozubka.context.Services.Repositories.ModelRepository.Rro.IRROCartRepository _rroCartRepository
@inject ua.kozubka.context.Services.Repositories.ModelRepository.UserRepository _userRepository
@inject ua.kozubka.context.Services.Repositories.ModelRepository.Rro.IRROSettingRepository _rroSettingRepository
@inject ua.kozubka.context.Services.Repositories.ModelRepository.Rro.IRROSmenaRepository _rroSmenaRepository

@{
    var googleTageManager = _settingRepository.GetSetting(ua.kozubka.context.Classes.Constants.SettingsOptions.GoogleTagManager);
    var filesite = _settingRepository.GetSetting(ua.kozubka.context.Classes.Constants.SettingsOptions.FileSite);
    var logoutPage = _settingRepository.GetSetting(ua.kozubka.context.Classes.Constants.SettingsOptions.LogoutFullPage);
    logoutPage = string.Format("{0}{1}", logoutPage, _designerRepository.GetSiteUrlFull);
    var currentUser= _userRepository.Users.Where(c => c.UserName == User.Identity.Name).FirstOrDefault();
    var rroCart = await _rroCartRepository.GetRROCart(currentUser);
    await _userRepository.CheckRROUser(currentUser);
}
