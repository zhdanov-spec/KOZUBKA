@model ua.kozubka.context.ViewModels.RROViewModels.CheckViewModels.RROCheckViewModel
<div class="container">
    <div class="cart-wrapper-area py-3">
        <div  class="card mb-3">
            <div class="card-body">
                <h6>Дата продажу: @Model.RROCheck.CheckTime.ToShortDateString()</h6>
                <h6>Час продажу: @Model.RROCheck.CheckTime.ToShortTimeString()</h6>
            </div>
        </div>
        <div class="cart-table card mb-3">
            <div class="table-responsive card-body">
                <table class="table mb-0">
                    <tbody>
                        @foreach(var item in Model.RROCheckDetails)
                        {
                            <tr>
                                
                                <td><img class="rounded" src="~/assets/img/product/11.png" alt=""></td>
                                <td>
                                    <a href="#">@item.DirectoryRroGoodsItem.ItemName<span>@string.Format("{0} × {1}",item.Price,item.Count)</span><span>Знижка: @item.DiscountSum</span></a>
                                </td>
                                <td>
                                    <h6>@(item.Summa-item.DiscountSum)</h6>
                                </td>
                            </tr>    
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card cart-amount-area">
            <div class="card-body d-flex align-items-center justify-content-between">
                <h5 class="total-price mb-0">Cума: <span class="counter1">@Model.RROCheck.CheckSum</span></h5>
            </div>
        </div>
    </div>
</div>