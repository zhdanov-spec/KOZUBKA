@inject ua.kozubka.context.Services.Repositories.GeneralRepository.IDesignerRepository _designerRepository
@inject ua.kozubka.context.Services.Repositories.ModelRepository.ISettingRepository _settingRepository
@{
    var siteURL = _designerRepository.GetSiteUrlFull;
    //Ссылки социальных сетей
    string facebookUrl = _settingRepository.GetSetting(ua.kozubka.context.Classes.Constants.SettingsOptions.FacebookUrl);
    string twitterUrl = _settingRepository.GetSetting(ua.kozubka.context.Classes.Constants.SettingsOptions.TwitterUrl);
    //Конец ссылок социальных
}
<!-- spacer -->
<table width="100%" cellspacing="0" cellpadding="0" border="0" role="presentation">
    <tbody>
        <tr>
            <td class="o_bg-white" style="font-size: 24px;line-height: 24px;height: 24px;background-color: #ffffff;">&nbsp; </td>
        </tr>
    </tbody>
</table>
