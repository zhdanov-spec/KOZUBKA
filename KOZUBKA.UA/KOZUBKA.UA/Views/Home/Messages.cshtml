    <!--JQuery TouchSwipe js-->
    <script src="@string.Format("{0}/assets/js/jquery.touchSwipe.min.js",fileSite)"></script>

    <!--Select2 js -->
    <script src="@string.Format("{0}/assets/plugins/select2/select2.full.min.js",fileSite)"></script>
    <script src="@string.Format("{0}/assets/js/select2.js",fileSite)"></script>

    <!-- Custom scroll bar js-->
    <script src="@string.Format("{0}/assets/plugins/scroll-bar/jquery.mCustomScrollbar.js",fileSite)"></script>

    <!-- sticky js-->
    <script src="@string.Format("{0}/assets/js/sticky.js",fileSite)"></script>

