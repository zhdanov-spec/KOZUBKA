@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<div class="content-overlay"></div>
<div class="header-navbar-shadow"></div>
<div class="content-wrapper">
    <div class="content-header row">
    </div>
    <div class="content-body">
        <!-- Error page-->
        <div class="misc-wrapper">
            <a class="brand-logo" asp-controller="Home" asp-action="Index" >
                <h2 class="brand-text text-primary ms-1">KOZUBKA</h2>

            </a>
            <div class="misc-inner p-2 p-sm-3">
                <div class="w-100 text-center">
                    
                    <h1 class="mb-1">@ViewBag.ErrorCode</h1>
                    <h2 class="mb-1">@ViewBag.ErrorTitle.</h2>
                    <p class="mb-2">@ViewBag.ErrorMessage. Ви можете повернутись на <a href="javascript:history.back()"><span>попередню сторінку</span></a>, або перейти на <a asp-controller="Home" asp-action="Index"><span>головну сторінку.</span></a></p>
                </div>
            </div>
        </div>
        <!-- / Error page-->
    </div>
</div>
